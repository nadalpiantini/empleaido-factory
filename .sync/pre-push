#!/bin/bash
# Git pre-push hook
# Automatically pulls before push to prevent conflicts

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

echo -e "${BLUE}üîÑ Pre-push check...${NC}"

# Fetch latest from origin
git fetch origin

# Get current branch
CURRENT_BRANCH=$(git branch --show-current)

# Check if local is behind remote
LOCAL=$(git rev-parse @)
REMOTE=$(git rev-parse @{u})
BASE=$(git merge-base @ @{u})

# If LOCAL == BASE and BASE != REMOTE, we're behind (need to pull)
# If LOCAL != BASE and BASE == REMOTE, we're ahead (safe to push)
# If LOCAL != BASE and BASE != REMOTE, we've diverged (need to pull then push)
if [ $LOCAL = $BASE ] && [ $BASE != $REMOTE ]; then
    echo -e "${RED}‚ö†Ô∏è  Warning: Your branch is behind origin/${CURRENT_BRANCH}${NC}"
    echo -e "${YELLOW}üì• Pulling latest changes first...${NC}"
    git pull origin "$CURRENT_BRANCH"
    echo -e "${GREEN}‚úÖ Pull complete. Now you can push.${NC}"
    echo -e "${YELLOW}üí° Please run your push command again.${NC}"
    exit 1
elif [ $LOCAL != $BASE ] && [ $BASE != $REMOTE ]; then
    echo -e "${RED}‚ö†Ô∏è  Warning: Branches have diverged${NC}"
    echo -e "${YELLOW}üì• Pulling latest changes first...${NC}"
    git pull origin "$CURRENT_BRANCH"
    echo -e "${GREEN}‚úÖ Merge complete. Now you can push.${NC}"
    echo -e "${YELLOW}üí° Please run your push command again.${NC}"
    exit 1
fi

echo -e "${GREEN}‚úÖ Pre-push check passed${NC}"
exit 0
