#!/bin/bash
# Git pre-push hook
# Automatically pulls before push to prevent conflicts

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

echo -e "${BLUE}üîÑ Pre-push check...${NC}"

# Get current branch
CURRENT_BRANCH=$(git branch --show-current)

# Fetch latest from origin
git fetch origin

# Count commits behind and ahead
BEHIND=$(git rev-list --count HEAD..@{u} 2>/dev/null || echo "0")
AHEAD=$(git rev-list --count @{u}..HEAD 2>/dev/null || echo "0")

if [ "$BEHIND" -gt 0 ] && [ "$AHEAD" -eq 0 ]; then
    # Purely behind - need to pull
    echo -e "${RED}‚ö†Ô∏è  Warning: Your branch is $BEHIND commits behind origin/${CURRENT_BRANCH}${NC}"
    echo -e "${YELLOW}üì• Pulling latest changes first...${NC}"
    git pull origin "$CURRENT_BRANCH"
    echo -e "${GREEN}‚úÖ Pull complete. Now you can push.${NC}"
    echo -e "${YELLOW}üí° Please run your push command again.${NC}"
    exit 1
elif [ "$BEHIND" -gt 0 ] && [ "$AHEAD" -gt 0 ]; then
    # Diverged - need to pull then push
    echo -e "${RED}‚ö†Ô∏è  Warning: Branches have diverged${NC}"
    echo -e "   ${YELLOW}Behind: $BEHIND commits | Ahead: $AHEAD commits${NC}"
    echo -e "${YELLOW}üì• Pulling latest changes first...${NC}"
    git pull origin "$CURRENT_BRANCH"
    echo -e "${GREEN}‚úÖ Merge complete. Now you can push.${NC}"
    echo -e "${YELLOW}üí° Please run your push command again.${NC}"
    exit 1
fi

echo -e "${GREEN}‚úÖ Pre-push check passed${NC}"
exit 0
